<div id="fullpage">
  {% paginate blog.articles by 100 %}
  <!-- <h1>{{ blog.title }}</h1> -->
  {% for article in blog.articles %}
    {% if article.metafields.story_information.hide_story != 1 %} 
      {% assign desktop_img = article.image | img_url: "master" %}
      {% if article.metafields.other_information.mobile_image %}
      {% assign mobile_img = article.metafields.other_information.mobile_image %}
      {% else %}
      {% assign mobile_img = desktop_img %}
      {% endif %} 
      <section class="vertical-scrolling desktop lazyload" id="section{{forloop.index}}" data-bg1="{{desktop_img}}" style="background-image: url('{{desktop_img}}'); background-size: cover; background-repeat: no-repeat; background-position: center center;" data-desktop-url="{{desktop_img}}" data-mobile-url="{{mobile_img}}">
        <div class="container-fluid h-100">
          <div class="row min-vh-100">
            <div class="col-lg-12 pl-50 pt-5" style="z-index: 997;">
              <a href="{{ article.url }}" class="testbg">
                <table class="story_model_info text-yellow mt-8 pt-5 d-none d-lg-block">
                  <tr>
                    <td>{{ article.metafields.story_model_info.model_name}}<br>
                      {{ article.metafields.story_model_info.age}}<br>
                      {{ article.metafields.story_model_info.city}}</td>
                    <td>{{ article.metafields.story_model_info.style_name_and_number}}<br>
                      {{ article.metafields.story_model_info.size_and_color_code}}<br>
                      {{ article.metafields.story_model_info.Material}}</td>
                  </tr>
                </table>
                <p class="slide_title_bottom story_title fs120 text-yellow mb-lg-0">{{ article.title }}</p>
                <p class="slide_description_bottom_right text-yellow mb-0"><u>{{ 'general.label.READ_STORY' | t }}</u></p>
              </a>
            </div>
          </div>
        </div>
      </section>
    {% endif %} 
  {% endfor %}
  
  {% if paginate.pages > 1 %}
    {{ paginate | default_pagination }}
  {% endif %}
  
  {% endpaginate %}
  </div>