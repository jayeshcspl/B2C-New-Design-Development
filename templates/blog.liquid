<div id="fullpage">
  {% paginate blog.articles by 7 %}
  <!-- <h1>{{ blog.title }}</h1> -->
  {% for article in blog.articles %}
    {% assign desktop_img = article.image | img_url: "master" %}
    {% if article.metafields.cf_story.mobile_img %}
    {% assign mobile_img = article.metafields.cf_story.mobile_img | file_url %}
    {% else %}
    {% assign mobile_img = desktop_img %}
    {% endif %}  
    <section class="vertical-scrolling desktop" id="section{{forloop.index}}" style="background-image: url('{{desktop_img}}'); background-size: cover; background-repeat: no-repeat; background-position: center center;" data-desktop-url="{{desktop_img}}" data-mobile-url="{{mobile_img}}">
      <div class="container-fluid h-100">
        <div class="row min-vh-100">
          <div class="col-lg-12 pl-50" style="z-index: 1000;">
            <a href="{{ article.url }}" class="testbg">
              <table class="story_model_info text-white mt-8 d-none d-lg-block">
                <tr>
                  <td>{{ article.metafields.story_model_info.model_name}}<br>
                    {{ article.metafields.story_model_info.age}}<br>
                    {{ article.metafields.story_model_info.city}}</td>
                  <td>{{ article.metafields.story_model_info.style_name_and_number}}<br>
                    {{ article.metafields.story_model_info.size_and_color_code}}<br>
                    {{ article.metafields.story_model_info.Material}}</td>
                </tr>
              </table>
              <p class="slide_title_bottom story_title fs120 text-white mb-lg-0">{{ article.title }}</p>
              <p class="slide_description_bottom_right text-white mb-0"><u>READ STORY</u></p>
            </a>
          </div>
        </div>
      </div>
    </section>
  {% endfor %}
  
  {% if paginate.pages > 1 %}
    {{ paginate | default_pagination }}
  {% endif %}
  
  {% endpaginate %}
  </div>