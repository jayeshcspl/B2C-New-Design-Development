  <div id="signUpModal" class="container-fluid">
    <div class="row">
      <div class="col-lg-6">
        <h5 class="modal-title mb-4 pb-0">Join our newsletter</h5>
        <p class="my-4 newsletter_text">We wish to give you inspiration on how to live a more fulfilling life. So, sign up to our newsletter to follow what goes on in our universe.</p>
      </div>
      <div class="col-lg-4 offset-lg-1">
        <form class="omnisend-subscribe-form myclass" name="omnisend-subscribe-form">
        <!-- {% form 'customer' %} -->
            {{ form.errors | default_errors }}
            {% if form.posted_successfully? %}
              <p class="form--success">{{ 'general.newsletter_form.confirmation' | t }}</p>
            {% else %}
              <div class="row form-row input-group1 password__input-group no-gutters">
                <div class="col-12 mb-4">
                  <input type="hidden" name="contact[tags]" value="newsletter">
                  <input type="text"
                  name="contact[name]"
                  id="Name"
                  class="input-group__field newsletter__input omnisend-subscribe-input-first-name form-control"
                  value="{% if customer %}{{ customer.name }}{% endif %}"
                  placeholder="Your name" required>
                  <div class="invalid-feedback"></div> 
                </div>
                <div class="col-12 mb-4">
                  <input type="email"
                  name="contact[email]"
                  id="Email"
                  class="input-group__field newsletter__input omnisend-subscribe-input-email form-control"
                  value="{% if customer %}{{ customer.email }}{% endif %}"
                  placeholder="Your email"
                  autocorrect="off"
                  autocapitalize="off" required>
                  <div class="invalid-feedback"></div>
                </div>
                <div class="col-12 mb-4 mt-4 newslater_privacy_text">On sign up you accept our <a href="/pages/cookies-privacy-policy" style="text-decoration: underline !important;">privacy policy</a></div>
              </div>
              <div class="row">
                <span class="col-12 input-group__btn">
                  <button type="submit" class="btn-signup newsletter__submit" name="commit" id="Subscribe">
                    <span class="newsletter__submit-text--large">Sign up</span>
                  </button>
                </span>
              </div>
            {% endif %}
          <!-- {% endform %} -->
        </form>
      </div>
    </div>
  </div>  
  <div class="container-fluid footer mt-5">
    <div class="row">
      <div class="col-lg-6">
        <div class="row no-gutters">
        <div class="col-6  col-lg-5 links">
          <p class="footer_title">{{about_us_txt}}</p>
          <ul class="mb-0">
            <li><a href="/pages/about">{{about_txt}}</a></li>
            <li><a href="/blogs/stories">{{stories_txt}}</a></li>
            <li><a href="/pages/contact">{{contact_us_txt}}</a></li>
